.breadcrumb-title-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 23px;
  border-bottom: solid 2px #222;

  h3 {
    font-size: 25px;
    color: #222;
    font-weight: bold;
    letter-spacing: -0.5px;
  }

  .sub-breadcrumb {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .breadcrumb {
    align-items: center;
    margin-bottom: 0;
    column-gap: 5px;

    .home-item {
      position: relative;
      padding-left: 18px;

      &::before {
        content: "";
        position: absolute;
        top: 1px;
        left: 0;
        width: 11px;
        height: 11px;
        background: {
          image: url('/image/main/route_home.svg');
          repeat: no-repeat;
          position: center center;
        }
      }
    }

    .breadcrumb-item {
      font-size: 15px;
      color: #555;
      font-weight: 700;

      & + .breadcrumb-item {
        &::before {
          content: '';
          background: url('/image/main/route_next.svg') no-repeat;
          width: 5px;
          height: 8px;
          position: relative;
          left: -5px;
          top: 2px;
        }
      }

      &.active {
        color: #1856ae;
      }
    }

    & + .btns-breadcrumb {
      margin-left: 10px;
    }
  }

  .btns-breadcrumb {
    display: flex;

    .btn {
      width: 84px;
      height: 30px;
      border: solid 1px #cecece !important;
      border-radius: 5px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      column-gap: 3px;

      & + .btn {
        margin-left: 10px;
      }

      span {
        font-size: 14px;
        color: #555;
      }

      &.print-button {
        span {
          position: relative;
          padding-left: 17px;

          &::before {
            content: "";
            position: absolute;
            top: 4px;
            left: 0;
            width: 13px;
            height: 13px;
            background: {
              image: url('/image/main/route_print.svg');
              repeat: no-repeat;
              position: center center;
            }
          }
        }
      }
    }
  }
}

/*mo*/
@media (max-width: 1199px) {
  .breadcrumb-title-box {
    padding-top: 40px;
    flex-flow: column-reverse;
    align-items: flex-start;
    padding-bottom: 12px;
    position: relative;

    .breadcrumb {
      row-gap: 5px;
    }

    .title-box {
      width: 100%;
      padding-right: 80px;
      line-height: 1.2;
    }

    .sub-breadcrumb {
      margin-bottom: 16px;
    }

    .btns-breadcrumb {
      position: absolute;
      bottom: 9px;
      right: 0;

      .btn {
        width: 32px;
        height: 32px;

        .icon-span {
          display: none;
        }
        .text-span {
          position: absolute;
          width: 1px;
          height: 1px;
          padding: 0;
          margin: -1px;
          overflow: hidden;
          clip: rect(0, 0, 0, 0);
          border: 0;
        }

        &::before {
          display: block;
          content: '';
        }

        &.prev-button {
          &:before {
            width: 16px;
            height: 16px;
            background-image: url('/image/main/route_prev.svg');
          }
        }

        &.print-button {
          &:before {
            width: 20px;
            height: 20px;
            background-image: url('/image/main/route_print.svg');
          }
        }
      }
    }
  }
}

@media (max-width: 425px) {
  .breadcrumb-title-box {
    .breadcrumb-item {
      font-size: 3.53vw;
    }
  }
}